<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.vehseri.rpttr42.MainActivity"
        android:layout_weight="1">
        <TextView
            android:id="@+id/textLoginAs"
            android:text="@string/login"
            style="@style/TextAndButton" />
        <Button
            android:id="@+id/buttonAsTeacher"
            android:text="@string/teacher"
            style="@style/TextAndButton" />
        <Button
            android:id="@+id/buttonAsPupil"
            android:text="@string/pupil"
            style="@style/TextAndButton" />
        <Button
            android:id="@+id/buttonAsParent"
            android:text="@string/parent"
            style="@style/TextAndButton" />
        <TextView
            android:id="@+id/textOr"
            android:text="@string/or"
            style="@style/TextAndButton" />
        <Button
            android:id="@+id/buttonRegister"
            android:text="@string/register"
            style="@style/TextAndButton" />
</LinearLayout>