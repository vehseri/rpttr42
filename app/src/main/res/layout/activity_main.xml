<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android">
    

    <menu xmlns:app="http://schemas.android.com/apk/res/android" >
        <item app:id="@+id/menuButtonSchedule"
            app:showAsAction="always"
            app:icon="@drawable/schedule"
            style="@style/ImageButtons"></item>
        <item app:id="@+id/menuButtonContacts"
            app:showAsAction="always"
            app:icon="@drawable/contacts"
            style="@style/ImageButtons"></item>
        <item app:id="@+id/menuButtonMessages"
            app:showAsAction="always"
            app:icon="@drawable/messages"
            style="@style/ImageButtons"></item>
        <item app:id="@+id/menuButtonUser"
            app:showAsAction="always"
            app:icon="@drawable/user"
            style="@style/ImageButtons"></item>
        <item app:id="@+id/menuButtonTasks"
            app:showAsAction="always"
            app:icon="@drawable/books"
